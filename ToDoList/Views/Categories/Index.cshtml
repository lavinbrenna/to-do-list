
@{
  Layout = "_Layout";
}
    @using ToDoList.Models;

    <h1>Categories</h1>
    @if (@Model.Count == 0)
    {
      <h3>No categories have been added yet!</h3>
    }
    <ul></ul>
    @foreach (Category category in Model)
    {
      <li><h3>@Html.ActionLink($"{category.Name}", "Details", new {id= category.CategoryId})</h3></li>
    }
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
    <p>@Html.ActionLink("Add a Category", "Create", "Categories")</p>
